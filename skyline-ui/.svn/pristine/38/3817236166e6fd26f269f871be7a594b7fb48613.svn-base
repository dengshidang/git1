
/*首页*/
/*banner*/
.home-banner{width: 100%; overflow: hidden; position: relative;}
.home-banner img{display: block; width: 100%; height: 100%; max-height: 730px;}
.scrolling li{float: left;width: 100%;}
.scrolling li a{display: block;text-align: center;}
.scroll-nav {position: absolute;bottom: 10px;left: 0;width: 100%;}
.scroll-nav {text-align: center;}
.scroll-nav ul{display: inline;}
.scroll-nav li{display: inline-block;width: 10px;height: 10px; border-radius: 50%;margin-right: 5px;text-align: center; background: rgb(158, 167, 214); overflow: hidden;}
.scroll-nav li.cur{color: #fff;background: #f8f9fc;}

/*快捷通道*/
.home-shortcut{width: 840px; margin: 60px auto 0; font-size: 14px;}
.shortcut-link{display: block; width: 110px; height: 38px; line-height: 38px; background: #333; color: #fff; border-radius: 4px; text-align: center;}
.shortcut-link:hover,.shortcut-link:focus{color: #fff;}
.shortcut-item{float: left; margin-right: 12px;  height: 38px; line-height: 38px; border-radius: 4px; border: 1px solid rgba(182,182,182,0.1);}
.shortcut-inp{display: block; width: 198px; height: 38px; line-height: 38px; padding-left: 15px; border-right: 1px solid rgba(182,182,182,0.1);}

/*平台介绍*/
.home-des{width: 80%; margin: 100px auto 0; text-align: center;}
.home-des h3{font-size: 18px; letter-spacing: 2px; margin-bottom: 70px;}
.home-des-item{padding: 15px 0; width: 24.5%; height: 114px; float: left; text-align: center; border-right: 1px dashed #d9dce8; position: relative;}
.home-des-item:nth-child(4){border-right: none;}
.des-img{display: block; width: 11.8%; position: absolute; top: 30%; right: -6%;}
.des-first{font-size: 16px; font-weight: 600; letter-spacing: 2px; position: absolute; width: 100%; height: 50px; text-align: center; top: 38%; transition: top 1s;}
.des-tit{position: relative; z-index: 2;}
.des-circle{display: block; width: 12.8%; border-radius: 50%; border: 1px solid #D9DCE8; opacity: 0; position: absolute; left: 43%; top: -30%; transition: opacity 1s;}
.des-cont{ position: absolute; line-height: 1.6; padding: 10px 8%; height: 66px; bottom: -76px; transition: bottom 1s;}
.home-des-item:hover .des-first{top: 12%;}
.home-des-item:hover .des-circle{opacity: 0.5;}
.home-des-item:hover .des-cont{bottom: 0px;}

/*APP下载*/
.home-app-bg{width: 100%; height: 430px; background: url(../img/home-bg1.png) no-repeat; background-size: 100% 100%; margin-top: 100px; text-align: center; padding: 1px 0;}
.home-app-box{width: 840px; margin: 75px auto;}
.home-app-box h3{font-size: 16px; margin-bottom: 86px;}
.home-app-type{width: 50%;}
.home-app-name{width: 132px; height: 172px;}
.home-app-name img{display: block; width: 66px; height: 115px; margin: 0 auto 30px;}
.home-app-name a{display: block; width: 132px; height: 30px; line-height: 30px; border-radius: 20px; border: 1px solid #333;}
.home-app-code{width: calc(100% - 132px); height: 172px;}
.home-app-code img{display: block; width: 120px; height: 120px; margin: 26px auto;}

/*文章列表*/
.home-article{width: 1120px; margin: 110px auto 110px;}
.home-article .hd{width: 188px; float: left;}
.home-article .hd ul{width: 100%;}
.home-article .hd ul li{padding-left: 36px; height: 48px; line-height: 48px; cursor: pointer;}
.home-article .hd ul li.on{background: #eeeeee; font-size: 16px;}
.home-article .bd{margin-left: 66px; float: left; height: 144px;}
.home-article-list{width: 866px;}
.home-article-list li{position: relative; display: block; width: 340px; height: 48px; line-height: 48px; float: left; margin-right: 66px; border-bottom: 1px dashed #d6d6d6; padding: 0 30px;}
.home-article-list li:nth-child(even){margin-right: 0;}
.home-article-list li:after{content: ''; display: block; width: 8px; height: 8px; background: #999; position: absolute; border-radius: 50%; left: 5px; top: 21px;}
.home-article-list li a{display: block; width: 100%; color: #333; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;}
.home-article-list li:hover:after{background: #508fd6;}
.home-article-list li:hover a{color: #508fd6;}


/*帮助中心*/
.article-bg{width: 100%; height: 300px; background: url(../img/article-bg.png) no-repeat; background-size: 100% 100%; display: flex; flex-direction: column; align-content: center; justify-content: center; align-items: center;}
.article-bg p{display: block; font-size: 24px; color: #fff;}
.article-bg p:nth-child(1){margin-bottom: 20px;}

.article-wrap-l{width: calc(20% - 20px); float: left;}
.article-wrap-r{width: 80%; float: right;}
.article-wrap-tit{padding: 0 20px; height: 64px; line-height: 64px; font-size: 18px; background: #fff; margin-bottom: 6px;}
.article-type{background: #fff; padding: 15px 0;}
.article-type a{display: block; padding: 0 30px; height: 60px; line-height: 60px;}
.article-type a.article-active{background: #ececec;}
.article-list{background: #fff; position: relative; padding: 10px 0 30px;}
.article-search{position: absolute; top: -54px; right: 30px; width: 160px; height: 30px; border: 1px solid #DEDEDE; border-radius: 3px;}
.article-search input{display: block; width: 120px; padding-left: 10px; float: left; height: 30px; line-height: 30px; font-size: 12px;}
.article-search .search-btn{display: block; width: 20px; height: 20px; background: url(../img/icon-search2.png) no-repeat; background-size: 100% 100%; margin-top: 5px;margin-right: 4px;}
.article-list-top{padding: 0 5% 0 3%;}
.article-list-main{min-height: 300px; max-height: 600px; overflow: auto;}
.article-row{padding: 0 5% 0 3%; border-bottom: 1px solid #f5f5f5; font-size: 12px;}
.article-option{ display: block; width: 25%; float: left; height: 50px; line-height: 50px;}
.article-option:nth-child(1){width: 18%;}
.article-option:nth-child(2){width: calc(35% - 20px); padding-right: 20px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;}
.article-option:nth-child(3){text-align: right;}
.article-option:nth-child(4){width: 22%; text-align: center;}
.article-link{display: block; width: 50px; height: 22px; line-height: 22px; border-radius: 3px; border: 1px solid #629FEA; margin: 13px auto; color: #629FEA;}

.article-tit{font-size: 18px; text-align: center;}
.article-time{font-size: 12px; color: #666; text-align: center; margin: 30px 0 40px;}
.article-text{min-height: 348px; text-indent: 28px;}

@media only screen and (max-width: 1440px) {
	/*平台介绍*/
	.home-des{width: 95%;}
	.des-circle{top: -24%;}

	/*文章列表*/
	.article-bg{height: 240px;}
}
